{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}
    {% if editMode %}
        <h1>Edit an article</h1>
    {% else %}
        <h1>Create article</h1>
    {% endif %}

    {{ form_start(formArticle) }}

    {{ form_row(formArticle.title, {'attr': {'placeholder': "Title of article"}}) }}
    {{ form_row(formArticle.category) }}
    {{ form_row(formArticle.content, {'attr': {'placeholder': "Content of article"}}) }}
    {{ form_row(formArticle.image, {'attr': {'placeholder': "Image of article"}}) }}


    <button class="btn btn-success" type="submit">
        {% if editMode %}
            Edit
        {% else %}
            Create article
        {% endif %}
    </button>

    {{ form_end(formArticle) }}

{% endblock %}