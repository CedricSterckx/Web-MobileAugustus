{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

    <section class="articles">
        {% for article in articles %}
        <article>
            <h2>{{ article.title }}</h2>
            <div class="metadata">Writed at {{ article.createdAt | date('d/m/y') }} at
                {{ article.createdAt | date('H:i')}}</div>
            <div class="content"><img src="{{ article.image }}" alt="placeholder img">
                {{ article.content | raw }}
                <a href="{{ path('blog_show', {'id':article.id}) }}" class="btn btn-primary">read article</a></div>
        </article>
        {% endfor %}
    </section>

{% endblock %}
